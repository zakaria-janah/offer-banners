<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="dnd_offers" resource="default" engine="innodb" comment="Offers Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Offer Id"/>
        <column xsi:type="boolean" name="status" nullable="false" comment="Offer Status"/>
        <column xsi:type="varchar" name="store_ids" nullable="false" length="255" default="" comment="Stores"/>
        <column xsi:type="text" name="name" nullable="false" comment="Offer Name"/>
        <column xsi:type="text" name="category_ids" nullable="false" comment="Category Ids where to display"/>
        <column xsi:type="text" name="image" nullable="false" comment="Offer Image"/>
        <column xsi:type="text" name="target_url" nullable="true" comment="Offer Target URL"/>
        <column xsi:type="timestamp" name="start_date" on_update="false" nullable="true" comment="Visible From Date"/>
        <column xsi:type="timestamp" name="end_date" on_update="false" nullable="true" comment="Visible To Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
